<html>
<head>
    <title>Student Record</title>
</head>
<body>
    <div>
        <h2>Hotels</h2>
        <table id="hotel" cellpadding="2" cellspacing="2" border="1" width="400px">
            <tr>
                <td style="background-color: gray; color: white">ID</td>
                <td style="background-color: gray; color: white">Hotel Name</td>
                <td style="background-color: gray; color: white">Address</td>
                <td style="background-color: gray; color:white">Pincode</td>
                <td style="background-color: gray; color:white">ContactPerson</td>
            </tr>
        </table>
    </div>

    <div>
        <h2>Search by ID</h2>

        <input type="text" size="5" id="stuId" />
        <input type="button" value="Search" onclick="find();" />

        <p id="st"></p>
    </div>
    <script src="jquery-3.4.1.js"></script>
    <script type="text/javascript">


        var uri = 'api/Hotel';
        $(document).ready(function () {
            $.ajax({
                url: '/api/Hotel/',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $.each(data, function (key, item) {
                        $('#hotel').append("<tr><td>" + item.Id + "</td>" + "<td>" + item.HotelName + "</td>" + "<td>" + item.Address + "</td>" + "<td>" + item.Pincode  + "</td>" + "<td>" + item.ContactPerson + "</td></tr>");
                    });
                },
                error: function (request, message, error) {
                    handleException(request, message, error);
                }
            });

        });



    </script>
</body>
</html>

